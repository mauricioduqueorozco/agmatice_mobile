<?xml version='1.0' encoding='utf-8'?>
<widget id="com.indicium.agmatice.app" version="0.0.1" xmlns="com.indicium.agmatice" xmlns:cdv="com.indicium.agmatice">
    <name>Agmatice</name>
    <description>Agmatice agricultura</description>
    <author email="mauricio.duque.eje@gmail.com" href="http://www.agmatice.com">Agmatice Team</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/android/icon/Agmatice36px.png" />
        <icon density="mdpi" src="resources/android/icon/Agmatice48px.png" />
        <icon density="hdpi" src="resources/android/icon/Agmatice72px.png" />
        <icon density="xhdpi" src="resources/android/icon/Agmatice96px.png" />
        <icon density="xxhdpi" src="resources/android/icon/Agmatice144px.png" />
        <icon density="xxxhdpi" src="resources/android/icon/Agmatice192px.png" />
        <icon src="resources/android/icon/Agmatice96px.png" />
        <splash density="port-ldpi" src="resources/android/splash/splash240x320px.png" />
        <splash density="port-mdpi" src="resources/android/splash/splash320x480px.png" />
        <splash density="port-hdpi" src="resources/android/splash/splash480x800px.png" />
        <splash density="port-xhdpi" src="resources/android/splash/splash720x1280px.png" />
        <splash density="port-xxhdpi" src="resources/android/splash/splash960x1600px.png" />
        <splash density="port-xxxhdpi" src="resources/android/splash/splash1280x1920px.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="57" src="resources/ios/icon/icon57.png" width="57" />
        <icon height="114" src="resources/ios/icon/114.png" width="114" />
        <icon height="40" src="resources/ios/icon/40.png" width="40" />
        <icon height="80" src="resources/ios/icon/80.png" width="80" />
        <icon height="120" src="resources/ios/icon/120.png" width="120" />
        <icon height="50" src="resources/ios/icon/50.png" width="50" />
        <icon height="100" src="resources/ios/icon/100.png" width="100" />
        <icon height="60" src="resources/ios/icon/60.png" width="60" />
        <icon height="120" src="resources/ios/icon/120.png" width="120" />
        <icon height="180" src="resources/ios/icon/180.png" width="180" />
        <icon height="72" src="resources/ios/icon/72.png" width="72" />
        <icon height="144" src="resources/ios/icon/144.png" width="144" />
        <icon height="76" src="resources/ios/icon/76.png" width="76" />
        <icon height="152" src="resources/ios/icon/152.png" width="152" />
        <icon height="167" src="resources/ios/icon/167.png" width="167" />
        <icon height="29" src="resources/ios/icon/29.png" width="29" />
        <icon height="58" src="resources/ios/icon/58.png" width="58" />
        <icon height="87" src="resources/ios/icon/87.png" width="87" />
        <splash height="1136" src="resources/ios/splash/iphone640x1136.png" width="640" />
        <splash height="1334" src="resources/ios/splash/667h_750x1334.png" width="750" />
        <splash height="2208" src="resources/ios/splash/736h_1242x2208.png" width="1242" />
        <splash height="2048" src="resources/ios/splash/ipad_1536x2048.png" width="1536" />
        <splash height="1024" src="resources/ios/splash/ipad_768x1024.png" width="768" />
        <splash height="960" src="resources/ios/splash/iphone_640x960.png" width="640" />
        <splash height="480" src="resources/ios/splash/iphone_320x480.png" width="320" />
    </platform>
    <plugin name="phonegap-plugin-barcodescanner" spec="^7.0.1" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="To locate you" />
    </plugin>
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-sqlite-storage" spec="^2.2.0" />
    <plugin name="ionic-plugin-keyboard" spec="^2.2.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.1" />
    <plugin name="cordova-plugin-device" spec="^1.1.4" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-ionic-webview" spec="^1.1.16" />
    <allow-navigation href="http://192.168.100.32:8100" />
