<?xml version='1.0' encoding='utf-8'?>
<widget id="com.indicium.agmatice.app" version="0.0.1" xmlns="com.indicium.agmatice" xmlns:cdv="com.indicium.agmatice">
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SQLitePlugin">
        <param name="android-package" value="io.sqlc.SQLitePlugin" />
    </feature>
    <feature name="Keyboard">
        <param name="android-package" value="io.ionic.keyboard.IonicKeyboard" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NfcPlugin">
        <param name="android-package" value="com.chariotsolutions.nfc.plugin.NfcPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <feature name="Diagnostic">
        <param name="android-package" value="cordova.plugins.Diagnostic" />
        <param name="onload" value="true" />
    </feature>
    <name>Agmatice</name>
    <description>Agmatice agricultura</description>
    <author email="mauricio.duque.eje@gmail.com" href="http://www.agmatice.com">Agmatice Team</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://192.168.100.32:8100" />
    <allow-navigation href="http://192.168.100.32:8101" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="resources/android/icon/Agmatice36px.png" />
    <icon density="mdpi" src="resources/android/icon/Agmatice48px.png" />
    <icon density="hdpi" src="resources/android/icon/Agmatice72px.png" />
    <icon density="xhdpi" src="resources/android/icon/Agmatice96px.png" />
    <icon density="xxhdpi" src="resources/android/icon/Agmatice144px.png" />
    <icon density="xxxhdpi" src="resources/android/icon/Agmatice192px.png" />
    <icon src="resources/android/icon/Agmatice96px.png" />
    <splash density="port-ldpi" src="resources/android/splash/splash240x320px.png" />
    <splash density="port-mdpi" src="resources/android/splash/splash320x480px.png" />
    <splash density="port-hdpi" src="resources/android/splash/splash480x800px.png" />
    <splash density="port-xhdpi" src="resources/android/splash/splash720x1280px.png" />
    <splash density="port-xxhdpi" src="resources/android/splash/splash960x1600px.png" />
    <splash density="port-xxxhdpi" src="resources/android/splash/splash1280x1920px.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
</widget>
